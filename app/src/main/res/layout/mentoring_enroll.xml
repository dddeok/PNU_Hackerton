<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp">
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:layout_marginRight="13dp"
                android:background="@drawable/close_big"
                android:id="@+id/btn_close"
                android:layout_gravity="right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="6sp"
                android:layout_marginLeft="11dp"
                android:text="다꿈 프로젝트"
                android:id="@+id/title"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6sp"
                android:text="2018-08-03"
                android:id="@+id/start"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6sp"
                android:text="~"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6sp"
                android:text="2018-08-04"
                android:id="@+id/end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center"
                android:text="교육기간   l    "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center"
                android:text="3시간"
                android:id="@+id/date"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center"
                android:text="멘토링   l    "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center"
                android:text="아두이노 교육"
                android:id="@+id/mentoring"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center"
                android:text="담당자   l    "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center"
                android:text="공미정"
                android:id="@+id/username"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="7dp"
                android:scaleType="fitXY"
                android:background="@drawable/call"
                android:id="@+id/call"
                />
            <ImageButton
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="25dp"
                android:scaleType="fitXY"
                android:background="@drawable/chat"
                android:id="@+id/btn_chat"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="25dp"
            android:textSize="14sp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:text="내용이 들어갑니다"
            android:id="@+id/contents"/>

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:background="@drawable/enroll"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/btn_apply"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="관심글 추가"
                android:layout_gravity="center"
                />
            <ImageButton
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:scaleType="fitXY"
                android:background="@drawable/emptystar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="14dp"
                android:id="@+id/favorite"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>