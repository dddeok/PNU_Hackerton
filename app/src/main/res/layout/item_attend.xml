<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.2dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:lineSpacingExtra="10sp"
        android:text="다꿈 프로젝트"
        android:layout_marginLeft="37dp"
        android:id="@+id/programName"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#8a000000"
            android:lineSpacingExtra="10sp"
            android:text="08.26"
            android:layout_marginLeft="10dp"
            android:id="@+id/date"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5.7dp"
        android:layout_marginLeft="37dp"
        android:layout_marginBottom="14.1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:lineSpacingExtra="12sp"
            android:text="18:18"
            android:id="@+id/startTime"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:lineSpacingExtra="12sp"
            android:text=" ~ "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:lineSpacingExtra="12sp"
            android:text="20:28"
            android:id="@+id/endTime"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.5dp"
            android:layout_marginRight="10.5dp"
            android:text="|"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:lineSpacingExtra="12sp"
            android:text="3h"
            android:id="@+id/totalTime"></TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>
        <Button
            android:layout_width="44dp"
            android:layout_height="18dp"
            android:background="#ffffff"
            android:textSize="12sp"
            android:textColor="#e83333"
            android:lineSpacingExtra="12sp"
            android:text="승인대기"
            android:layout_marginRight="24dp"
            android:id="@+id/state"
            />
    </LinearLayout>

</LinearLayout>